{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/auth" }]
      },
      "menu-route": {
        "ClusterId": "menu-cluster",
        "Match": { "Path": "/menu/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/menu" }]
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": { "Path": "/order/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/order" }]
      },
      "ai-route": {
        "ClusterId": "ai-cluster",
        "Match": { "Path": "/ai/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/ai" }]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": { "destination1": { "Address": "http://tenant-auth-service:8080/" } }
      },
      "menu-cluster": {
        "Destinations": { "destination1": { "Address": "http://menu-service:8080/" } }
      },
      "order-cluster": {
        "Destinations": { "destination1": { "Address": "http://order-payment-service:8080/" } }
      },
      "ai-cluster": {
        "Destinations": { "destination1": { "Address": "http://ai-service:5000/" } }
      }
    }
  }
}